@model SosyalMedyaMVC.Models.SendMessageViewModel

@{
    ViewData["Title"] = "Mesaj Gönder";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="SendMessage" method="post">
    <div class="form-group">
        <label asp-for="Receiver"></label>
        <input asp-for="Receiver" class="form-control" placeholder="Alıcı kullanıcı adını girin" />
        <span asp-validation-for="Receiver" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control" placeholder="Mesaj içeriğini girin"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Gönder</button>
</form>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-success">
        @ViewData["Message"]
    </div>
}

@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger">
        @ViewData["Error"]
    </div>
}
